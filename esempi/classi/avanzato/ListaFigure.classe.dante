oggetto LsitaFigure
    # lista lista: lista generica
    lista l<Quadrato,Triangolo>
    pubblico decimale base #predefinto è pubblico
    #crea() è implicito
    dimensione () restituisce intero
        restituisci lunghezza(lista)
    pubblico aggiungi(Quadrato q) restituisce nulla
        LsitaFigure.l += q
    pubblico aggiungi(Triangolo t) restituisce nulla
        LsitaFigure.l += t
    pubblico ottieni(intero indice) restituisce Triangolo|Quadrato
        restituisci LsitaFigure.l[i]